<div id="school-closure-results">
  <p>Last updated: {{ updated|date('g.ia') }} on {{ updated|date('jS F Y') }}.</p>

  {% if closures|length > 0 %}
    {% for closure in closures %}
    <div class="columnItem">
      <h3 data-transliterated="{{ closure.altname }}">{{ closure.name }} | {{ closure.location }}</h3>
      <p class="description">{{ closure.date|date('l jS F Y') }} {{ closure.reason|default("") }}</p>
    </div>
    {% endfor %}
  {% elseif error %}
    <p>Sorry, there was a problem with this service. Please contact your school for information on possible closures.</p>
  {% else %}
    <p>There are no school closures.</p>
  {% endif %}
</div>
